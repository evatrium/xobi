{
  "name": "xobi",
  "version": "0.1.0",
  "description": "Mini observable object",
  "repository": {
    "type": "git",
    "url": "https://github.com/iosio/xobi.git"
  },
  "license": "MIT",
  "main": "index.js",
  "module": "index.js",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "index.js",
    "preact.js",
    "createxObi.js"
  ],
  "keywords": [
    "state",
    "observable",
    "preact",
    "connect",
    "hook"
  ],
  "scripts": {
    "start": "rollup -c -w --environment project:demo,preset:dev",
    "start:react": "rollup -c -w --environment project:demo,preset:dev",
    "build:demo": "rollup -c --environment project:demo_react,preset:build_app",
    "build:index": "rollup -c --environment project:index",
    "build:preact": "rollup -c --environment project:preact",
    "build:react": "rollup -c --environment project:react",
    "build": "yarn build:index && yarn build:preact && yarn build:react",
    "test": "jest --config config/jest.js",
    "test:watch": "jest --config config/jest.js --watch"
  },
  "rollupConfig": {
    "project": {
      "demo": {
        "input": "demo/src/index.js",
        "html": "demo/src/index.html",
        "output": "demo/build"
      },
      "demo_react": {
        "input": "demo/src/index.react.js",
        "html": "demo/src/index.html",
        "output": "demo/build",
        "pragma": "React.createElement",
        "pragmaFrag": "React.Fragment"
      },
      "index": {
        "preset": "lib",
        "input": [
          "src/index.js"
        ],
        "output": "."
      },
      "preact": {
        "preset": "lib",
        "input": [
          "src/preact.js"
        ],
        "output": ".",
        "external": [
          "preact",
          "preact/hooks",
          "preact/compat"
        ]
      },
      "react": {
        "preset": "lib",
        "input": [
          "src/react.js"
        ],
        "output": ".",
        "external": [
          "react",
          "react-dom"
        ],
        "pragma": "React.createElement",
        "pragmaFrag": "React.Fragment"
      }
    },
    "sourcemap": false
  },
  "devDependencies": {
    "preact": "*",
    "babel-jest": "^25.1.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.1.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rollup-configured": "0.0.13"
  }
}
